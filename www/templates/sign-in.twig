{% extends "baseForm.twig" %}

{% block title %}Sign In Page{% endblock %}

{% block content %}
<div class="container position-sticky z-index-sticky top-0">
    <div class="row">
        <div class="col-12">
            <nav class="navbar navbar-expand-lg  blur blur-rounded top-0 z-index-fixed shadow position-absolute my-3 py-2 start-0 end-0 mx-4">
                <div class="container-fluid px-0">
                    <a href="/" class="navbar-brand font-weight-bolder ms-sm-3" rel="tooltip" title="Designed and Coded by Creative Tim" data-placement="bottom">
                        Bookworm
                    </a>
                    <a class="btn btn-sm  bg-gradient-primary  btn-round mb-0 ms-auto d-lg-none d-block">Profile</a>
                    <button class="navbar-toggler shadow-none ms-md-2" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon mt-2">
            <span class="navbar-toggler-bar bar1"></span>
            <span class="navbar-toggler-bar bar2"></span>
            <span class="navbar-toggler-bar bar3"></span>
          </span>
                    </button>
                    <div class="collapse navbar-collapse w-100 pt-3 pb-2 py-lg-0" id="navigation">
                        <ul class="navbar-nav navbar-nav-hover mx-auto">
                            <!-- Pages Account Blocks Docs -->
                            <li class="nav-item dropdown dropdown-hover mx-2">
                                <a href="/profile" class="dropdown-item border-radius-md">
                                    <span class="ps-3">User Profile</span>
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav d-lg-block d-none">
                                <li class="nav-item">
                                    <a class="btn btn-sm  bg-gradient-primary  btn-round mb-0 me-1" onclick="smoothToPricing('pricing-soft-ui')">Hi! :)</a>
                                </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
        </div>
    </div>
</div>

<section>
    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('assets/img/curved-images/curved10.jpg');">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 text-center mx-auto">
                    <h1 class="text-white mb-2 mt-5">Welcome!</h1>
                    <p class="text-lead text-white">Unlock a world of books by logging in. Explore a variety of titles, genres, and authors once you're in. Start your reading journey now!</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mt-lg-n10 mt-md-n12 mt-n11">
            <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                <div class="card z-index-0">
                    <div class="card-header text-center pt-4">
                        <h5>Sign in</h5>
                        {% if flash is not empty %}
                            <div>
                                {% for message in flash %}
                                    <p data-cy="sign-in__message" style="color: red;">{{ message }}</p>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <form data-cy="sign-in" action="{{ formAction }}" method="{{ formMethod }}" accept-charset="utf-8">
                            <div class="mb-3">
                                <input id="email" name="email" data-cy="sign-in__email" type="email" class="form-control" placeholder="Email" aria-label="Email" value="{% if formData.email %}{{ formData.email }}{% endif %}" required>
                                {% if formErrors.email %}
                                    <span class="error-message" data-cy="sign-in__wrongEmail">{{ formErrors.email }}</span>
                                {% endif %}
                            </div>
                            <div class="mb-3">
                                <input data-cy="sign-in__password" id="password" type="password" name="password" class="form-control" placeholder="Password" aria-label="Password" required>
                                {% if formErrors.password %}
                                    <span class="error-message" data-cy="sign-in__wrongPassword">{{ formErrors.password }}</span>
                                {% endif %}
                            </div>
                            <div class="text-center">
                                <button data-cy="sign-in__btn" type="submit" class="btn bg-gradient-info w-100 my-4 mb-2">Sign in</button>
                            </div>
                            <div class="mb-2 position-relative text-center">
                                <p class="text-sm font-weight-bold mb-2 text-secondary text-border d-inline z-index-2 bg-white px-3 align-center">
                                    or
                                </p>
                            </div>
                            <div class="text-center">
                                <a href="/sign-up" class="btn bg-gradient-dark w-100 mt-2 mb-4">Sign up</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
