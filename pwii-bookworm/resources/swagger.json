{
  "openapi": "3.0.1",
  "servers": [
    {
      "description": "Forums API",
      "url": "http://localhost:8080/api"
    }
  ],
  "info": {
    "description": "This a simple API that allows CRUD operations to the forums database",
    "version": "1.0.0",
    "title": "Forums API",
    "contact": {
      "email": "a.navarrosoto@salle.url.edu"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "paths": {
    "/forums": {
      "get": {
        "summary": "gets all forums",
        "operationId": "allForums",
        "description": "Gets a list of forums that are saved in the database",
        "responses": {
          "200": {
            "description": "Forum retrieval complete",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Forum"
                  }
                }
              }
            }
          },
          "401": {
            "description": "The user isn't authenticated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageUnauthenticated"
                }
              }
            }
          },
          "403": {
            "description": "The user doesn't have a set username",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageForbidden"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "adds a forum",
        "operationId": "addForum",
        "description": "Adds a forum to the database",
        "responses": {
          "201": {
            "description": "Forum created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Forum"
                }
              }
            },
            "headers": {
              "Location": {
                "schema": {
                  "type": "string"
                },
                "description": "The URL where to send a GET request to obtain this forum's information. It should be of the form /api/forums/{forum_id}."
              }
            }
          },
          "400": {
            "description": "Empty or wrong input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageMissingInput"
                }
              }
            }
          },
          "401": {
            "description": "The user isn't authenticated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageUnauthenticated"
                }
              }
            }
          },
          "403": {
            "description": "The user doesn't have a set username",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageForbidden"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Forum"
              }
            }
          },
          "description": "New forum to store in the database. You don't need to provide the new forum's id, as it will be autogenerated by the database."
        }
      }
    },
    "/forums/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "Forum identifier",
          "required": true,
          "allowEmptyValue": false,
          "schema": {
            "type": "string",
            "example": 1
          }
        }
      ],
      "get": {
        "summary": "gets an existing forum",
        "operationId": "getForum",
        "description": "Gets a single forum stored in the database",
        "responses": {
          "200": {
            "description": "Forum search complete",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Forum"
                  }
                }
              }
            }
          },
          "401": {
            "description": "The user isn't authenticated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageUnauthenticated"
                }
              }
            }
          },
          "403": {
            "description": "The user doesn't have a set username",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageForbidden"
                }
              }
            }
          },
          "404": {
            "description": "Forum does not exist",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageNotFound"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "deletes an existing forum",
        "operationId": "deleteForum",
        "description": "Deletes an existing forum in the database",
        "responses": {
          "200": {
            "description": "Forum deleted"
          },
          "401": {
            "description": "The user isn't authenticated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageUnauthenticated"
                }
              }
            }
          },
          "403": {
            "description": "The user doesn't have a set username",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageForbidden"
                }
              }
            }
          },
          "404": {
            "description": "Forum does not exist",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageNotFound"
                }
              }
            }
          }
        }
      }
    },
    "/forums/{id}/posts": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "Forum identifier",
          "required": true,
          "allowEmptyValue": false,
          "schema": {
            "type": "string",
            "example": 1
          }
        }
      ],
      "get": {
        "summary": "gets an existing forum's posts",
        "operationId": "getForumPost",
        "description": "Gets a single forum post stored in the database",
        "responses": {
          "200": {
            "description": "Forum post search complete",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          },
          "401": {
            "description": "The user isn't authenticated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageUnauthenticated"
                }
              }
            }
          },
          "403": {
            "description": "The user doesn't have a set username",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageForbidden"
                }
              }
            }
          },
          "404": {
            "description": "Forum post does not exist",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageNotFound"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "adds a post to an existing forum",
        "operationId": "addForumPost",
        "description": "Adds a forum post to the database.",
        "responses": {
          "201": {
            "description": "Forum post created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            },
            "headers": {
              "Location": {
                "schema": {
                  "type": "string"
                },
                "description": "The URL where to send a GET request to obtain this post's information. It should be of the form /api/forums/{forum_id}/posts/{post_id}, but you don't have to implement it."
              }
            }
          },
          "401": {
            "description": "The user isn't authenticated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageUnauthenticated"
                }
              }
            }
          },
          "400": {
            "description": "Empty or wrong input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageMissingInput"
                }
              }
            }
          },
          "403": {
            "description": "The user doesn't have a set username",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageForbidden"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Post"
              }
            }
          },
          "description": "New forum post to store in the database. You don't need to provide the new post's id, as it will be autogenerated by the database."
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Forum": {
        "type": "object",
        "required": [
          "title",
          "description"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "example": "1",
            "readOnly": true
          },
          "title": {
            "type": "string",
            "example": "Fantasy Books"
          },
          "description": {
            "type": "string",
            "example": "To discuss books in the Fantasy genre and related subgenres"
          }
        }
      },
      "Post": {
        "type": "object",
        "required": [
          "userId",
          "forumId",
          "title",
          "contents"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "example": "1",
            "readOnly": true
          },
          "forumId": {
            "type": "integer",
            "example": "1",
            "writeOnly": true
          },
          "userId": {
            "type": "integer",
            "example": "1",
            "writeOnly": true
          },
          "title": {
            "type": "string",
            "example": "My first post"
          },
          "contents": {
            "type": "string",
            "example": "These forums are awesome!"
          },
          "opUsername": {
            "type": "string",
            "example": "trevan104",
            "readOnly": true
          },
          "opProfilePicture": {
            "type": "string",
            "example": "http://localhost:8080/avatars/92600914-ec59-4952-a113-653cca895549.png",
            "readOnly": true
          }
        }
      },
      "MessageUnauthenticated": {
        "type": "object",
        "required": [
          "message"
        ],
        "properties": {
          "message": {
            "type": "string",
            "example": "This API can only be used by authenticated users."
          }
        }
      },
      "MessageForbidden": {
        "type": "object",
        "required": [
          "message"
        ],
        "properties": {
          "message": {
            "type": "string",
            "example": "This API can only be used by users with a defined username."
          }
        }
      },
      "MessageNotFound": {
        "type": "object",
        "required": [
          "message"
        ],
        "properties": {
          "message": {
            "type": "string",
            "example": "Forum with id 3 does not exist"
          }
        }
      },
      "MessageMissingInput": {
        "type": "object",
        "required": [
          "message"
        ],
        "properties": {
          "message": {
            "type": "string",
            "example": "A required input was missing."
          }
        }
      },
      "MessageInputEmpty": {
        "type": "object",
        "required": [
          "message"
        ],
        "properties": {
          "message": {
            "type": "string",
            "example": "A required input was empty."
          }
        }
      }
    }
  }
}